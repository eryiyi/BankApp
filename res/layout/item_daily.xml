<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="12dp"
              android:gravity="center_vertical"
              android:background="@drawable/btn_white_shape"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:textSize="14sp"
              android:id="@+id/item_dateline"
              android:textColor="@color/blue_btn_normal"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textColor="@color/text_color"
              android:textSize="14sp"
              android:layout_toRightOf="@id/item_dateline"
              android:id="@+id/item_nickname"
              android:layout_marginLeft="15dp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textSize="16sp"
              android:layout_marginTop="6dp"
              android:layout_below="@+id/item_dateline"
              android:id="@+id/item_cont"
              android:textColor="@color/text_color"
              android:lineSpacingMultiplier="1.2"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_below="@+id/item_cont"
              android:id="@+id/item_brose"
              android:textColor="@color/text_color_two"
              android:drawablePadding="6dp"
              android:gravity="center"
              android:layout_marginLeft="12dp"
              android:layout_alignParentRight="true"
              android:drawableLeft="@drawable/sm_view"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_below="@+id/item_cont"
              android:id="@+id/item_comment"
              android:textColor="@color/text_color_two"
              android:drawablePadding="6dp"
              android:gravity="center"
              android:layout_toLeftOf="@+id/item_brose"
              android:drawableLeft="@drawable/sm_comment"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="wrap_content"
               android:id="@+id/item_fujian"
               android:layout_alignParentRight="true"
               android:src="@drawable/file_attachment"
               android:layout_marginRight="8dp"
               android:layout_height="wrap_content"/>
</RelativeLayout>