<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:orientation="vertical">
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e9e9e9"/>
    <RelativeLayout
            android:id="@+id/relate_renwu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_white_shape"
            android:duplicateParentState="true">
        <ImageView
                android:id="@+id/renwu_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_task"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/renwu_icon"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="任务"
                    android:textColor="#323232"
                    android:textSize="16sp"/>

        </LinearLayout>
        <TextView
                android:layout_centerVertical="true"
                android:id="@+id/unread_renwu_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/unread_count_bg"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e9e9e9"/>
    <RelativeLayout
            android:id="@+id/relate_beiwanglu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_white_shape"
            android:duplicateParentState="true">
        <ImageView
                android:id="@+id/beiwang_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_bell"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/beiwang_icon"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="备忘录"
                    android:textColor="#323232"
                    android:textSize="16sp"/>

        </LinearLayout>
        <TextView
                android:layout_centerVertical="true"
                android:id="@+id/unread_beiwang_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/unread_count_bg"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e9e9e9"/>
    <RelativeLayout
            android:id="@+id/relate_notice"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_white_shape"
            android:duplicateParentState="true">
        <ImageView
                android:id="@+id/notice_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_broad"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/notice_icon"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="公告"
                    android:textColor="#323232"
                    android:textSize="16sp"/>

        </LinearLayout>
        <TextView
                android:layout_centerVertical="true"
                android:id="@+id/unread_notice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/unread_count_bg"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e9e9e9"/>
</LinearLayout>