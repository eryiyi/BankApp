<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>

    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_starttime"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:text="开始日期"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/starttime"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/text_color_two"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_endtime"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:text="到期日"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/endtime"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/text_color_two"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <Button android:layout_width="match_parent"
            android:text="保存下一步"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:onClick="saveTaskDatelineAction"
            android:layout_below="@+id/liner_one"
            android:layout_marginLeft="25dp"
            android:textSize="16sp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_blue_shape"
            android:layout_height="wrap_content"/>

</LinearLayout>