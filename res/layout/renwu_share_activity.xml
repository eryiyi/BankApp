<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>
    <com.ruiping.BankApp.widget.ReboundScrollView android:layout_width="match_parent"
                                                  android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

            <com.ruiping.BankApp.widget.PictureGridview
                    android:id="@+id/grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:horizontalSpacing="4dip"
                    android:numColumns="6"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="4dip"
                    android:padding="4dip"/>

            <View android:layout_width="match_parent"
                  android:background="@color/gray"
                  android:layout_marginTop="6dp"
                  android:layout_height="0.1dp"></View>
            <RelativeLayout android:layout_width="match_parent"
                            android:background="@drawable/btn_white_shape"
                            android:padding="12dp"
                            android:id="@+id/liner_one"
                            android:layout_height="50dp">
                <TextView android:layout_width="wrap_content"
                          android:text="选择人员"
                          android:layout_centerVertical="true"
                          android:textSize="16sp"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:drawableRight="@drawable/sm_more"
                          android:drawablePadding="5dp"
                          android:layout_centerVertical="true"
                          android:textSize="16sp"
                          android:layout_alignParentRight="true"
                          android:textColor="@color/text_color_two"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:background="@color/gray"
                  android:layout_marginTop="15dp"
                  android:layout_height="0.1dp"></View>
            <RelativeLayout android:layout_width="match_parent"
                            android:background="@drawable/btn_white_shape"
                            android:padding="12dp"
                            android:id="@+id/liner_two"
                            android:layout_height="50dp">
                <TextView android:layout_width="wrap_content"
                          android:text="选择部门"
                          android:layout_centerVertical="true"
                          android:textSize="16sp"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:drawableRight="@drawable/sm_more"
                          android:drawablePadding="5dp"
                          android:layout_centerVertical="true"
                          android:textSize="16sp"
                          android:layout_alignParentRight="true"
                          android:textColor="@color/text_color_two"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:background="@color/gray"
                  android:layout_marginTop="15dp"
                  android:layout_height="0.1dp"></View>
            <RelativeLayout android:layout_width="match_parent"
                            android:background="@drawable/btn_white_shape"
                            android:padding="12dp"
                            android:id="@+id/liner_three"
                            android:layout_height="50dp">
                <TextView android:layout_width="wrap_content"
                          android:text="选择所有人"
                          android:layout_centerVertical="true"
                          android:textSize="16sp"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </com.ruiping.BankApp.widget.ReboundScrollView>
</LinearLayout>