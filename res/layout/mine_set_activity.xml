<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:id="@+id/liner_one"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="清除缓存"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/liner_two"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="新版本检查"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:gravity="center"
                  android:layout_centerVertical="true"
                  android:textSize="14sp"
                  android:id="@+id/daily_count"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_three"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="二维码"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_notice"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="公告"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="12dp"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="字体大小"
                  android:id="@+id/fontsize_text"
                  android:layout_weight="1"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
        <com.ruiping.BankApp.widget.CustomerSpinner
                android:layout_marginLeft="25dp"
                android:paddingLeft="15dp"
                android:id="@+id/textSize"
                android:layout_width="160dp"
                android:layout_height="45dp">
        </com.ruiping.BankApp.widget.CustomerSpinner>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_four"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="关于"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>

    <Button android:layout_width="match_parent"
            android:text="退 出"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:onClick="quiteAction"
            android:layout_below="@+id/liner_one"
            android:layout_marginLeft="25dp"
            android:textSize="16sp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_red_shape"
            android:layout_height="wrap_content"/>
</LinearLayout>