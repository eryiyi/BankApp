<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>


    <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bule_bg"
            android:textSize="16sp"
            android:gravity="top"
            android:hint="这里是备忘录详情"
            android:padding="10dp"
            android:textColor="#ff000000"/>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_marginTop="15dp"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_dateline"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:text="提醒时间"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/dateline"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/text_color_two"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
</LinearLayout>