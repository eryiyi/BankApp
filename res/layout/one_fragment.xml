<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>

    <View android:layout_width="match_parent"
          android:layout_marginTop="15dp"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_one"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="我参与的任务"
                  android:id="@+id/txt1"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="0"
                  android:gravity="center"
                  android:layout_centerVertical="true"
                  android:background="@drawable/sm_task_bubble"
                  android:textSize="14sp"
                  android:id="@+id/task_mine_number"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_two"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="创建的任务"
                  android:id="@+id/txt2"
                  android:layout_centerVertical="true"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="0"
                  android:gravity="center"
                  android:layout_centerVertical="true"
                  android:background="@drawable/sm_task_bubble"
                  android:textSize="14sp"
                  android:id="@+id/task_mine_number_do"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_three"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="未完成的任务"
                  android:id="@+id/txt3"
                  android:textSize="16sp"
                  android:layout_centerVertical="true"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="0"
                  android:layout_centerVertical="true"
                  android:gravity="center"
                  android:background="@drawable/sm_task_bubble"
                  android:textSize="14sp"
                  android:id="@+id/task_mine_number_finish"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_share"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="共享的任务"
                  android:textSize="16sp"
                  android:id="@+id/txt4"
                  android:layout_centerVertical="true"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="0"
                  android:id="@+id/task_mine_number_share"
                  android:gravity="center"
                  android:layout_centerVertical="true"
                  android:background="@drawable/sm_task_bubble"
                  android:textSize="14sp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.1dp"></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/btn_white_shape"
                    android:padding="12dp"
                    android:id="@+id/liner_four"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="全部任务"
                  android:id="@+id/txt5"
                  android:textSize="16sp"
                  android:layout_centerVertical="true"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="0"
                  android:id="@+id/task_mine_number_all"
                  android:gravity="center"
                  android:layout_centerVertical="true"
                  android:background="@drawable/sm_task_bubble"
                  android:textSize="14sp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>