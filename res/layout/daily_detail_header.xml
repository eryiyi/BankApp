<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp"
                   android:id="@+id/head"
                   android:src="@drawable/ic_launcher"
                   android:layout_height="50dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="张三"
                  android:layout_marginTop="3dp"
                  android:layout_marginLeft="8dp"
                  android:layout_toRightOf="@+id/head"
                  android:id="@+id/nickname"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="昨天 06：:40"
                  android:layout_marginLeft="8dp"
                  android:id="@+id/dateline"
                  android:layout_marginTop="8dp"
                  android:layout_toRightOf="@+id/head"
                  android:textColor="@color/blue_btn_normal"
                  android:textSize="14sp"
                  android:layout_below="@+id/nickname"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="完成安卓版OA系统框架搭建，完成主要页面，接口待完成..."
                  android:textSize="16sp"
                  android:layout_marginTop="8dp"
                  android:lineSpacingMultiplier="1.2"
                  android:id="@+id/content"
                  android:textColor="@color/text_color"
                  android:layout_below="@+id/head"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                   android:drawableLeft="@drawable/file_attachment"
                   android:text="点此查看附件"
                   android:id="@+id/btn_attachment"
                  android:padding="8dp"
                  android:textColor="@color/blue"
                   android:layout_below="@+id/content"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_height="45dp">
        <TextView android:layout_width="0dp"
                  android:padding="8dp"
                  android:gravity="center"
                  android:id="@+id/btn_comment"
                  android:layout_weight="1"
                  android:text="评论"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="45dp"/>
        <View android:layout_width="0.1dp"
              android:background="@color/gray"
              android:layout_height="45dp"></View>
        <TextView android:layout_width="0dp"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:padding="8dp"
                  android:text="查阅情况"
                  android:id="@+id/btn_brower"
                  android:textSize="16sp"
                  android:textColor="@color/text_color"
                  android:layout_height="45dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <View android:layout_width="0dp"
              android:layout_weight="1"
              android:id="@+id/view_one"
              android:background="@color/blue_btn_normal"
              android:layout_height="1dp">
        </View>
        <View android:layout_width="0dp"
              android:layout_weight="1"
              android:id="@+id/view_two"
              android:background="@color/white"
              android:layout_height="1dp">
        </View>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="15dp"
                  android:gravity="center_horizontal"
                  android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content"
                android:text="添加评论"
                android:id="@+id/add_comment"
                android:padding="8dp"
                android:background="@drawable/btn_blue_shape"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>