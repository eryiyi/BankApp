<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="60dp">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_one"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/foot_one"
                   android:src="@drawable/nav_week"
                   android:layout_height="60dp"/>
        <TextView
                android:id="@+id/unread_msg_number"
                android:layout_alignRight="@+id/foot_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/em_unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_two"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/foot_two"
                   android:src="@drawable/nav_task"
                   android:layout_height="60dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_three"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/nav_day"
                   android:id="@+id/foot_three"
                   android:layout_height="60dp"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_four"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/foot_four"
                   android:src="@drawable/nav_contact"
                   android:layout_height="60dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_five"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/foot_five"
                   android:src="@drawable/nav_mine_p"
                   android:layout_height="60dp"/>
    </RelativeLayout>
</LinearLayout>