<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="45dp"
                   android:id="@+id/head"
                   android:src="@drawable/ic_launcher"
                   android:layout_height="45dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_toRightOf="@+id/head"
                  android:id="@+id/nickname"
                  android:textSize="16sp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginTop="6dp"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_toRightOf="@+id/head"
                  android:id="@+id/dateline"
                  android:textSize="15sp"
                  android:layout_below="@+id/nickname"
                  android:layout_marginLeft="8dp"
                  android:layout_marginTop="6dp"
                  android:textColor="@color/text_color_two"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/blue_btn_normal"
                  android:id="@+id/week"
                  android:textSize="16sp"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="6dp"
                  android:layout_below="@+id/nickname"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView android:layout_width="wrap_content"
              android:text="工作成效"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginLeft="8dp"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/content_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/et_bule_bg"
            android:textSize="16sp"
            android:gravity="top"
            android:hint=" 此处填写工作成效"
            android:padding="10dp"
            android:textColor="#ff000000"/>
    <TextView android:layout_width="wrap_content"
              android:text="工作总结"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginLeft="8dp"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/content_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/et_bule_bg"
            android:textSize="16sp"
            android:gravity="top"
            android:hint=" 此处填写工作总结心得"
            android:padding="10dp"
            android:textColor="#ff000000"/>
    <TextView android:layout_width="wrap_content"
              android:text="下半年计划"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginLeft="8dp"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/content_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/et_bule_bg"
            android:textSize="16sp"
            android:gravity="top"
            android:hint=" 此处填写工作计划"
            android:padding="10dp"
            android:textColor="#ff000000"/>
    <TextView android:layout_width="wrap_content"
              android:text="点此添加附件"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:background="@color/white"
              android:drawableLeft="@drawable/file_attachment"
              android:id="@+id/btn_attachment"
              android:padding="8dp"
              android:textColor="@color/blue"
              android:layout_height="wrap_content"/>
</LinearLayout>