<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="8dp"
              android:gravity="center_vertical"
              android:background="@drawable/btn_white_shape"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView android:layout_width="50dp"
               android:id="@+id/item_head"
               android:layout_centerVertical="true"
               android:src="@drawable/ic_launcher"
               android:layout_height="50dp"/>
    <TextView android:layout_width="wrap_content"
              android:textSize="15sp"
              android:layout_toRightOf="@+id/item_head"
              android:id="@+id/item_title"
              android:layout_marginLeft="6dp"
              android:textColor="@color/text_color"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="6dp"
                  android:layout_marginLeft="6dp"
                  android:layout_toRightOf="@+id/item_head"
                  android:layout_below="@+id/item_title"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:id="@+id/item_jindu"
                  android:textSize="14sp"
                  android:textColor="@color/blue_btn_normal"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:layout_marginLeft="6dp"
                  android:id="@+id/item_nickname"
                  android:textColor="@color/text_color_two"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="right"
                  android:layout_marginLeft="6dp"
                  android:textColor="@color/text_color_two"
                  android:layout_below="@+id/item_nickname"
                  android:id="@+id/item_dateline"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>