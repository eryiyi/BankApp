<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="12dp"
              android:gravity="center_vertical"
              android:background="@drawable/btn_white_shape"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:text="昨天 01：:12"
              android:textSize="14sp"
              android:id="@+id/item_daline_1"
              android:textColor="@color/blue_btn_normal"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="张三"
              android:textColor="@color/text_color"
              android:textSize="14sp"
              android:layout_toRightOf="@id/item_daline_1"
              android:id="@+id/item_daline_2"
              android:layout_marginLeft="15dp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textSize="16sp"
              android:layout_marginTop="6dp"
              android:layout_below="@+id/item_daline_1"
              android:id="@+id/item_cont"
              android:textColor="@color/text_color"
              android:lineSpacingMultiplier="1.2"
              android:layout_height="wrap_content"/>

</RelativeLayout>